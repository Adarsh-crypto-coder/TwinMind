<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:45:30 PM"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginBottom="8dp" />

    <!-- Transcription Text -->
    <TextView
        android:id="@+id/tv_transcription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the transcribed text from the audio recording. It will contain the spoken words that were captured during the recording session."
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="4dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="16dp" />

</LinearLayout>